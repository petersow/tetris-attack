<level name="4drop">
    <blocks>
        <!-- the 4 match -->
        <block x="1" y="1" shape="blue"/>
        <block x="1" y="2" shape="blue"/>
        <block x="2" y="3" shape="blue"/>
        <block x="1" y="4" shape="blue"/>

        <!-- the two on top -->
        <block x="1" y="5" shape="red"/>
        <block x="1" y="6" shape="blue"/>
        <block x="1" y="7" shape="green"/>

        <!-- the support -->
        <block x="2" y="1" shape="yellow"/>
        <block x="2" y="2" shape="red"/>
        <block x="1" y="3" shape="cyan"/>

        <!-- 0 col -->
        <block x="0" y="5" shape="red"/>
        <block x="0" y="1" shape="yellow"/>
        <block x="0" y="2" shape="red"/>
        <block x="0" y="3" shape="cyan"/>|
        <block x="0" y="4" shape="magenta"/>
    </blocks>
</level>
